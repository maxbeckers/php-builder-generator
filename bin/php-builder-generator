#!/usr/bin/env php
<?php

declare(strict_types=1);

$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
    __DIR__ . '/../../../../autoload.php',
];

$autoloadPath = null;
foreach ($autoloadPaths as $path) {
    if (file_exists($path)) {
        $autoloadPath = $path;
        break;
    }
}

if ($autoloadPath === null) {
    fwrite(STDERR, "Error: Could not find autoloader. Make sure you run 'composer install'.\n");
    exit(1);
}

require $autoloadPath;

use MaxBeckers\PhpBuilderGenerator\Command\GenerateBuildersCommand;
use Symfony\Component\Console\Application;

$application = new Application('PHP Builder Generator', '1.0.0');
$application->add(new GenerateBuildersCommand());
$application->setDefaultCommand('generate', true);

try {
    $application->run();
} catch (Exception $e) {
    fwrite(STDERR, "Error: {$e->getMessage()}\n");
    exit(1);
}